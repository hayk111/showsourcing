{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "./src/",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
		"paths": {
			"@app/*": ["app/*"],
			"@modules/*": ["app/modules/*"],
			"@modules": ["app/modules/index"],
      "@products/*": ["app/modules/products/*"],
      "@products": ["app/modules/products/index"],
      "@suppliers/*": ["app/modules/suppliers/*"],
      "@suppliers": ["app/modules/suppliers/index"],
			"@store/*": ["app/modules/store/*"],
			"@store": ["app/modules/store/index"],
			"@shared/*": ["app/modules/shared/*"],
			"@shared": ["app/modules/store/index"],
			"@utils/*": ["app/utils/*"],
			"@utils": ["app/utils/index"]
    }
  }
}
