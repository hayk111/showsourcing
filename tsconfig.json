{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
		"declaration": false,
    "moduleResolution": "node",
		"resolveJsonModule": true,
		"skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "baseUrl": "./src/",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2019",
      "dom",
      "esnext.asynciterable"
    ],
    "paths": {
			"lib": [
				"../node_modules/showsourcing-api-lib"
			],
      "~app-root/*": [
        "app/app-root/*"
      ],
      "~app-root/": [
        "app/app-root/index"
      ],
      "~common/*": [
        "app/common/*"
      ],
      "~common/": [
        "app/common/index"
      ],
      "~core/*": [
        "app/core/*"
      ],
      "~core/": [
        "app/core/index"
      ],
      "~features/*": [
        "app/features/*"
      ],
      "~features/": [
        "app/features/index"
      ],
      "~shared/*": [
        "app/shared/*"
      ],
      "~shared": [
        "app/shared/index"
      ],
      "~utils/*": [
        "app/utils/*"
      ],
      "~deprecated/*": [
        "../deprecated/*"
      ],
      "~utils": [
        "app/utils/index"
			],
			"~generated": [
				"generated/*"
			]
    }
	},
	"angularCompilerOptions": {
		"fullTemplateTypeCheck": true
	}
}
