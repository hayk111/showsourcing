{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "./src/",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
		"paths": {
			"~app/*": ["app/*"],
			"~auth/*": ["modules/auth/*"],
			"~auth": ["modules/auth/index"],
			"~comment/*": ["modules/comment/*"],
			"~comment": ["modules/comment/index"],
			"~dialog/*": ["modules/dialog/*"],
			"~dialog": ["modules/dialog/index"],
			"~modules/*": ["modules/*"],
			"~modules": ["modules/index"],
			"~products": ["modules/products/index"],
			"~products/*": ["modules/products/*"],
			"~projects": ["modules/projects/index"],
			"~projects/*": ["modules/projects/*"],
			"~shared/*": ["modules/shared/*"],
			"~shared": ["modules/store/index"],
			"~store/*": ["app/store/*"],
			"~store": ["app/store/index"],
			"~suppliers/*": ["modules/suppliers/*"],
			"~suppliers": ["modules/suppliers/index"],
			"~tasks/*": ["modules/tasks/*"],
			"~tasks": ["modules/tasks/index"],
			"~user/*": ["modules/user/*"],
			"~user": ["modules/user/index"],
			"~utils/*": ["app/utils/*"],
			"~utils": ["app/utils/index"]
    }
  }
}
