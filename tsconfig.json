{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
		"baseUrl": "./src/",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
			"dom",
			"esnext.asynciterable"
    ],
		"paths": {
			"~app/*": ["app/*"],
			"~feature/*": ["app/features/*"],
			"~feature/": ["app/features/index"],
			"~models/*": ["app/models/*"],
			"~models": ["app/models/index"],
			"~shared/*": ["app/shared/*"],
			"~shared": ["app/shared/index"],
			"~utils/*": ["app/app-root/utils/*"],
			"~utils": ["app/app-root/utils/index"]
    }
  }
}
