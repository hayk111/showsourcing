{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
		"baseUrl": "./src/",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
			"dom",
			"esnext.asynciterable"
    ],
		"paths": {
			"~app-root/*": ["app/app-root/*"],
			"~app-root/": ["app/app-root/index"],
			"~features/*": ["app/features/*"],
			"~features/": ["app/features/index"],
			"~models/*": ["app/models/*"],
			"~models": ["app/models/index"],
			"~shared/*": ["app/shared/*"],
			"~shared": ["app/shared/index"],
			"~global-services/*": ["app/global-services/*"],
			"~global-services": ["app/global-services/index"],
			"~utils/*": ["app/utils/*"],
			"~utils": ["app/utils/index"]
    }
  }
}
