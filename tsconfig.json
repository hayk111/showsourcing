{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "./src/",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
		"paths": {
			"~app/*": ["app/*"],
			"~comment/*": ["app/modules/comment/*"],
			"~comment": ["app/modules/comment/index"],
			"~modules/*": ["app/modules/*"],
			"~modules": ["app/modules/index"],
			"~products": ["app/modules/products/index"],
			"~products/*": ["app/modules/products/*"],
			"~projects": ["app/modules/projects/index"],
			"~projects/*": ["app/modules/projects/*"],
			"~shared/*": ["app/modules/shared/*"],
			"~shared": ["app/modules/store/index"],
			"~store/*": ["app/modules/store/*"],
			"~store": ["app/modules/store/index"],
			"~suppliers/*": ["app/modules/suppliers/*"],
			"~suppliers": ["app/modules/suppliers/index"],
			"~tasks/*": ["app/modules/tasks/*"],
			"~tasks": ["app/modules/tasks/index"],
			"~user/*": ["app/modules/user/*"],
			"~user": ["app/modules/user/index"],
			"~utils/*": ["app/utils/*"],
			"~utils": ["app/utils/index"]
    }
  }
}
