{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "baseUrl": "./src/",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
		"paths": {
			"~app/*": ["app/*"],
			"~auth/*": ["app/features/auth/*"],
			"~auth": ["app/features/auth/index"],
			"~comment/*": ["app/features/comment/*"],
			"~comment": ["app/features/comment/index"],
			"~dialog/*": ["app/shared/dialog/*"],
			"~dialog": ["app/shared/dialog/index"],
			"~features/*": ["app/features/*"],
			"~features/": ["app/features/index"],
			"~file/*": ["app/features/file/*"],
			"~file/": ["app/features/file/index"],
			"~products": ["app/features/products/index"],
			"~products/*": ["app/features/products/*"],
			"~projects": ["app/features/projects/index"],
			"~projects/*": ["app/features/projects/*"],
			"~root/*": ["app/app-root/*"],
			"~root/": ["app/app-root/index"],
			"~shared/*": ["app/shared/*"],
			"~shared": ["app/shared/index"],
			"~store/*": ["app/app-root/store/*"],
			"~store": ["app/app-root/store/index"],
			"~suppliers/*": ["app/features/suppliers/*"],
			"~suppliers": ["app/features/suppliers/index"],
			"~tasks/*": ["app/features/tasks/*"],
			"~tasks": ["app/features/tasks/index"],
			"~user/*": ["app/features/user/*"],
			"~user": ["app/features/user/index"],
			"~utils/*": ["app/app-root/utils/*"],
			"~utils": ["app/app-root/utils/index"],
    }
  }
}
