{
	"files.autoSave": "onFocusChange",
	"editor.tabSize": 2,
	"editor.insertSpaces": false,
	"editor.detectIndentation": false,
	"files.trimTrailingWhitespace": true,
	"git.enableSmartCommit": true,
	"tslint.enable": true,
	"tslint.autoFixOnSave": true,
	"javascript.preferences.quoteStyle": "single",
	"typescript.preferences.quoteStyle": "single",
	"[typescript]": {
		"editor.formatOnSave": true,
		"editor.acceptSuggestionOnEnter": "on"
	},
  "path-intellisense.mappings": {
		"~app-root/*": ["${workspaceRoot}/src/app/app-root/*"],
		"~features/*": ["${workspaceRoot}/src/app/features/*"],
		"~models/*": ["${workspaceRoot}/src/app/models/*"],
		"~global-services/*": ["${workspaceRoot}/src/app/global-services/*"],
		"~utils/*": ["${workspaceRoot}/src/app/utils/*"],
		"~shared/*": ["${workspaceRoot}/src/app/shared/*"],
	}
}
